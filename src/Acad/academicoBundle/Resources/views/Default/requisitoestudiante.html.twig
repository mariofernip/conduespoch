{% block article %}
<section id="menu_secre">
    {% include 'academicoBundle:Default:menu_secretaria.html.twig'%}
</section>
<h1>{{ block ('title')}}</h1>

       

<table class="display" id="itsthetable">
    <thead>
    <th colspan="2">Datos del estudiante</th>   
    </thead>
    <tbody>
        <tr>
          <TD><strong>CÃ©dula:</strong>{{estudiante.cedula}}</TD>
          <TD ROWSPAN=3 ALIGN="CENTER" style="vertical-align:middle"><img src="{{ asset('uploads/documents/'~ estudiante.path) }}" width="80" height="80" border="0" alt="{{estudiante.nombre}}{{estudiante.apellido}}"></TD>
        </tr>

        <tr >
          <TD class="odd"><strong>Nombre:</strong>{{estudiante.nombre}}</TD>
        </tr>
        <tr>
          <TD><strong>Apellido:</strong>{{estudiante.apellido}}</TD>
        </tr>
</tbody>
</table>


<form action="{{ path('estudiante_requisito',{'cedula': estudiante.cedula}) }}" method="post" {{
        form_enctype(form) }} >
    {{ form_start(form) }}
        {# render the task's only field: description #}
    
    <br>
    <h3>Requisitos</h3>
    <ul>
        {# iterate over each existing tag and render its only field: name #}
        {% for req in form.reqest %}
            <li>{{ form_widget(req.estado) }}{{ form_widget(req.requisito, { 'attr': {'disabled' : 'true' } }) }}</li>
        {% endfor %}
    </ul>

    
    <input type="submit" value="guardar" class="boton" >
    {{ form_end(form) }}
    </form>



{% endblock%}

