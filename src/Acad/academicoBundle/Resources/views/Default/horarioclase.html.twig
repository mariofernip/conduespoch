{% extends '::frontend.html.twig' %}


{% block id 'requisito' %}

{% block title %}Horario de clases{% endblock%}

{% block article %}
<section id="menu_secre">
    {% include 'academicoBundle:Default:menu_inspector.html.twig'%}
</section>
<br><br>
<form action="{{ path('inspector_horario_asignar',{'did':did}) }}" method="post" {{
        form_enctype(form) }} >
        {{ form_start(form) }}
            
        <div id="dt_example">
                <table class="display" id="example">
                    <thead>
                        <tr>
                            <th colspan="3">HORARIO DE CLASES</th>                     
                            
                        </tr>
                        <tr>
                            <th colspan="3" align="left"><span>CÉDULA: &nbsp;&nbsp;{{docente.cedula}}</span>&nbsp;&nbsp;&nbsp;<span>NOMBRE: &nbsp;&nbsp;{{docente | upper}}</span></th>
                            
                        </tr>
                        
                        <tr>
                            <th>Materia</th>                     
                            <th>Dia</th>
                            <th>Hora</th>
                            
                        </tr>
                        </thead>        
                     <tbody>
                    {% for req in form.dochoraclase %}
                    
                        <tr >
                            <td>{{ form_widget(req.dictadomateria, { 'attr': {'disabled' : true } }) }}</td>                                         
                            <td>{{ form_widget(req.dia) }}</td> 
                            <td>{{ form_widget(req.hora) }}</td> 
                        <tr>
                    <tbody>
                    {% endfor %}
                </table>
            </div> 
        <input type="submit" value="guardar" class="boton" >
        {{ form_end(form) }}
    </form>


{% endblock%}

{% block aside %}
{{ parent()}}
<div id="demo">
<table class="display" id="itsthetable">
    <thead>
        <tr>
            <th>ASIGNAR HORARIOS</th>
        </tr>
    </thead>
    <tbody>
    {% for doc in docentes%}
        <tr>
            <td> <a href="{{path('inspector_horario_asignar',{'did': doc.id})}}">{{doc}}</a></td>
        <tr>
    {% endfor %}
    </tbody>
</table>
    </div>

