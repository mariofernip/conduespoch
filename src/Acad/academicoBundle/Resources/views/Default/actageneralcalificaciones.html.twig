{% extends '::frontend.html.twig'%}

{% block title %} INICIO {% endblock%}
{% block id 'portada' %}
{% block article%}
<section id="menu_docente">
        {% include 'academicoBundle:Default:menu_docente.html.twig' with {'mesevac': mesevac, 'listamaterias': listamaterias}%}
</section>

<p style="text-align: center ; color: #0035C7; "><strong>ACTA GENERAL DE CALIFICACIONES POR MATERIA</strong></p>        
<li style="color: #08C">Se lista los estudiantes por secciones, cédula y su nombre</li>
<li style="color: #08C">Se presenta el promedio por notas, de todo el ciclo</li>

<div id="dt_example">
    
    <div id="demo">
         {% if sd== 1 %}
        <table class="display" id="itsthetable">
            <thead>
                <tr >
                    <th>{{'Seccion- Cedula- Nombre Completo'}}</th>
                    <th>{{'Prom. Tranajo Grupo'}}</th>
                    <th>{{'Prom. Est. Casos'}}</th>
                    <th>{{'Prom. Práct.'}}</th>
                    <th>{{'Prom. Teór.'}}</th>
                    <th>{{'Prom. Total.'}}</th>                    
                    <th>{{'Sus.'}}</th>                                       
                    <th>{{'Equi.'}}</th>
                   
                 </tr>
                </thead>
                            
        {% for est in estudiantes %}
<tbody>
    <tr>            
        <td>{{est.seccion | title}}{{' - '}}{{est.cedula}}{{' - '}}{{est.apellido | title}} &nbsp;{{'  '}}{{est.nombre | title}}</td>                
        <td style="text-align: center; width: 30px; vertical-align: middle">{{'%.2f'|format((est.notatb/mesconteo))}}</td>
        <td style="text-align: center; width: 30px; vertical-align: middle">{{'%.2f'|format((est.notaec/mesconteo))}}</td>
        <td style="text-align: center; width: 30px; vertical-align: middle">{{'%.2f'|format((est.notapp/mesconteo))}}</td>
        <td style="text-align: center; width: 30px; vertical-align: middle">{{'%.2f'|format((est.notapt/mesconteo))}}</td>
        <td style="text-align: center; width: 30px; vertical-align: middle">{{'%.0f'|format((est.notatb/mesconteo+est.notaec/mesconteo+est.notapp/mesconteo+est.notapt/mesconteo)/4)}}</td>
        <td style="text-align: center; width: 30px; vertical-align: middle">{#{{est.promedio}}#}</td>
        <td  style="text-align: center; width: 30px; vertical-align: middle">
        {% if (est.notatb/mesconteo+est.notaec/mesconteo+est.notapp/mesconteo+est.notapt/mesconteo)/4 < 14 %}
            <strong>Reprobado</strong>
        {% endif %}
        {% if (est.notatb/mesconteo+est.notaec/mesconteo+est.notapp/mesconteo+est.notapt/mesconteo)/4 > 14 %}
            <strong>Aprobado</strong>
        {% endif %}</td>
        
    </tr>
</tbody>                       
    {% endfor%}
     
                        
        </table>
    {%else%}
        <h1>No hay estudiantes</h1>
    {% endif%}
    </div>
</div>
<br>
{#{% endif %}#}

{% endblock%}
{% block aside %}
{{parent()}}
    <p align="center">Materia actual</p>
   <p style="text-align: center ; color: #090 "><strong>{{nivel.curso.nombre | upper}}&nbsp;&nbsp;{{nivel.paralelo.nombre | upper }}&nbsp;:&nbsp;{{materia.nombre}}</strong></p>
   <strong><p align="left">Curso / Materia</p></strong>
    <div id="relacionadas">
        <ul>
       {% for mat in listamaterias %}
                <li><a href="{{path('docente_variable_sesion', {'niv': mat.nivel.id, 'mat': mat.materia.id})}}" class="boton">{{mat.nivel | title}}&nbsp;&nbsp;{{mat.materia.nombre | title}}</a></li>
       {% endfor%}
            </ul>
        </div>
          
    <a title="Cierra la sesión actual" href="{{ path('usuario_logout') }}"><strong>Cerrar sesión</strong></a>
{% endblock%}

          
