{% extends '::frontend.html.twig'%}

{% block title %} INICIO {% endblock%}
{% block id 'portada' %}
{% block article%}
<section id="menu_secre">
    {% include 'academicoBundle:Default:menu_docente.html.twig'%}
</section>    

<div id="dt_example">
    <div id="demo">
        <div class="count">
            {#{{ pagination.getTotalItemCount }}#}
            </div>
            <table class="display" id="example">
                <thead>
                    <tr>
                        <th colspan="7">NOTAS PARCIALES DEL MES DE: {{mes | upper}}</th>
                    </tr>
                    <tr>
                        {#<th>Cédula</th><th>Nombre</th><th>Apellido</th><th>Correo electrónico</th><th>Estado</th><th>Acción</th>#}

                            <th>{{ knp_pagination_sortable(listaeva, 'Cédula', 'e.cedula') }}</th>
                            <th>{{ knp_pagination_sortable(listaeva, 'Nombre', 'e.nombre') }}</th>                            
                            <th>{{ knp_pagination_sortable(listaeva, 'Sección', 'm.seccion') }}</th>                            
                            <th>{{ knp_pagination_sortable(listaeva, 'Trabajo grupo', 'ev.notatb') }}</th>                            
                            <th>{{ knp_pagination_sortable(listaeva, 'Estudio casos', 'ev.notaec') }}</th>
                            <th>{{ knp_pagination_sortable(listaeva, 'Prueba práctica', 'ev.notapp') }}</th>
                            <th>{{ knp_pagination_sortable(listaeva, 'Prueba teórica', 'ev.notapt') }}</th>

                        </tr>

                    </thead>
                    <tbody>
                    {% for est in listaeva %}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                                <td style="text-align: center; width: 30px; vertical-align: middle">{{est.materiaasignada.matricula.estudiante.cedula}}</td>
                                <td style="vertical-align: middle">{{est.materiaasignada.matricula.estudiante.apellido | title }}&nbsp; {{est.materiaasignada.matricula.estudiante.nombre | title}}</td>
                                <td style="text-align: center; width: 30px; vertical-align: middle">{{est.materiaasignada.matricula.seccion | title}}</td>
                                <td style="text-align: center; width: 30px; vertical-align: middle">{{est.notatb}}</td>
                                <td style="text-align: center; width: 30px; vertical-align: middle">{{est.notaec}}</td>
                                <td style="text-align: center; width: 30px; vertical-align: middle">{{est.notapp}}</td>
                                <td style="text-align: center; width: 30px; vertical-align: middle">{{est.notapt}}</td>                                
                         <tr>
                        </tbody>
                    {% endfor%}
                    </table>

                    <div class="paginacion">
                        {{ knp_pagination_render(listaeva) }}
                     </div>
               </div>

<br><br>
{% endblock%}
{% block aside%}
    {{parent()}}
    <p align="center">Materia actual</p>
   <p style="text-align: center ; color: #090 "><strong>{{nivel.curso.nombre | upper}}&nbsp;&nbsp;{{nivel.paralelo.nombre | upper }}&nbsp;:&nbsp;{{materia.nombre}}</strong></p>
   <strong><p align="left">Curso / Materia</p></strong>
    <div id="relacionadas">
        <ul>
    {% for matdoc in materiasdoc %}
                <li><a title="{{matdoc.materiaperiodo.materia.nombre | upper }}" class="boton" href="{{path('docente_variable_sesion',{'niv': matdoc.nivel.id, 'mat': matdoc.materiaperiodo.materia.id})}}">{{matdoc.nivel.descripcion | upper }}&nbsp;&nbsp;{{matdoc.materiaperiodo.materia.nombre | title | truncate(10,true)}}</a></li>
    {% endfor%}

            </ul>
        </div>

    <a title="Cierra la sesión actual" href="{{ path('usuario_logout') }}"><strong>Cerrar sesión</strong></a>
{% endblock%}
