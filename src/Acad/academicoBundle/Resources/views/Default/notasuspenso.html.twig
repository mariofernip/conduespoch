{% extends '::frontend.html.twig'%}

{% block title %} NOTAS {% endblock%}

{% block id 'portada' %}
{% block article%}
<section id="menu_secre">
    {% include 'academicoBundle:Default:menu_docente.html.twig'%}
</section>    
<p style="text-align: center ; color: #0035C7; -webkit-animation-play-state: "><strong>INGRESO NOTAS DE SUPLETORIOS</strong></p>
    {% if cod==1%}
    <p><strong>Detalles:</strong></p>
    <ul>
        <li style="color: #08C">Se presenta todos estudiantes ordenados por secciones, número de cédula y su nombre</li>
        <li style="color: #08C">Tome en cuenta la materia seleccionada de color verde</li>
            </ul>
    <form action="{{ path('docente_notas_suspenso',{'materia': mat.id, 'nivel': niv.id}) }}" method="post" {{
        form_enctype(form) }} >
        {{ form_start(form) }}
            
        <div id="dt_example">
                <table class="display" id="example">
                    <thead>
                        <tr>
                            <th colspan="4">NOTAS DE SUSPLETORIOS</th>                     
                            
                        </tr>
                        <tr>
                            <th>Sección / Cédula / Estudiante</th>                     
                            <th>Suspenso</th>
                            <th>Promedio final</th>
                            <th>Equivalencia</th>
                        </tr>
                        </thead>        
                     <tbody>
                    {% for req in form.evaest %}
                    
                        <tr {% if loop.index is odd %} class="color" {% endif %}>
                            <td style="text-align: left; vertical-align: middle">{{ form_widget(req.matricula, { 'attr': {'disabled' : true } }) }}</td>             
                            <td style="text-align: center; width: 80px; vertical-align: middle">{{ form_widget(req.notasuspenso)}}</td> 
                            <td style="text-align: center; width: 110px; vertical-align: middle">{{ form_widget(req.promediofinal) }}</td> 
                            <td style="text-align: center; width: 80px; vertical-align: middle">{{ form_widget(req.equivalencia) }}</td>
                            
                        <tr>
                    <tbody>
                    {% endfor %}
                </table>
                <div class="paginacion">
                    {{ knp_pagination_render(evaest) }}
                </div>                
            </div> 
        <input type="submit" value="guardar" class="boton" >
        {{ form_end(form) }}
    </form>
    {% else%}
    <strong>No hay registros de estudiantes</strong>
    {% endif%}
    
 
{% endblock%}

{% block aside%}
    {{parent()}}
    <p align="center">Materia actual</p>
    <strong style="color: #090">{{nivel}}&nbsp;{{materia}}</strong>
    <p></p>
    <strong>
        <p align="left">Curso / Materia</p>
    </strong>
    <div id="relacionadas">
        <ul>
    {% for matdoc in materiasdoc %}
                <li><a class="boton" href="{{path('docente_variable_sesion',{'niv': matdoc.nivel.id, 'mat': matdoc.materia.id})}}">{{matdoc.nivel | title}}&nbsp;&nbsp;{{matdoc.materia.nombre | title}}</a></li>
    {% endfor%}

            </ul>
        </div>

    <a title="Cierra la sesión actual" href="{{ path('usuario_logout') }}"><strong>Cerrar sesión</strong></a>
{% endblock%}

{% block javascripts %}
    {{ parent() }}
{% endblock%}
{% block stylesheets %}
      {{ parent()}}                 
        {% include 'academicoBundle:Default:tablecss.html.twig'%}
{% endblock %}

