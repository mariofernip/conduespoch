
{% extends '::frontend.html.twig' %}

{% block id 'portada' %}

{% block title %}Registro de un nuevo curso{% endblock%}

{% block article %}
<section id="menu_admin">
    {% include 'administrativoBundle:Default:menu_admin.html.twig'%}
</section>
<p style="text-align: center ; color: #0035C7 "><strong>MODIFICAR UN CURSO</strong></p>
<br>
<form action="{{ path('admin_nivel_modificar',{'codnivel': codnivel}) }}" method="post" {{
        form_enctype(formulario) }}>
        {{ form_errors(formulario) }}
          <fieldset>
                
                  {{form_label(formulario.curso,'Nivel:')}}{{form_errors(formulario.curso)}}{{form_widget(formulario.curso, { 'attr': {'autocomplete' : 'off' } }) }}<br>                  
                  {{form_label(formulario.paralelo,'Paralelo:')}}{{form_errors(formulario.paralelo)}}{{form_widget(formulario.paralelo, { 'attr': {'autocomplete' : 'off' } }) }}<br>                  
                  
                  
              </fieldset>   
         {{form_rest(formulario)}}                   
          <input class="boton" type="submit" value="Guardar" />
</form>
<hr>
<strong><p align="center">LISTA CURSOS</p></strong>
<div id="dt_example">
    <div id="demo">
            <table class="display" id="example" style="width: 400px">
                    <thead>
                        <tr>
                            <th colspan="4">PREVIAMENTE REGISTRADOS</th>                                                 
                        <tr>
                            <th>Nivel</th>            
                            <th>Paralelo</th>
                            <th>Descripcion</th>
                            <th>Accion</th>
                        </tr>
                        </thead>        
                     <tbody>
                    {% for m in lista %}
                        
                        <tr >
                            <td style="text-align: center; width: 100px; vertical-align: middle ">{{m.curso | upper }}</td> <td style="text-align: center; width: 30px; vertical-align: middle ">{{ m.paralelo | upper }}</td><td style="text-align: center; width: 40px; vertical-align: middle ">{{m.descripcion | upper}}</td> <td style="text-align: center; width: 40px; vertical-align: middle "><a href="{{path('admin_nivel_modificar', {'codnivel': m.id})}}"><img title="Editar curso"  src="{{ asset('uploads/iconos/edit.gif') }}"></a></td>                        
                            
                        <tr>
                    <tbody>
                    {% endfor %}
                </table>
        </div>
    </div>
<br><br>
{% endblock%}

{% block aside %}
    {{ parent()}}
    <a href="{{ path('usuario_logout') }}" title="Cerrar sesión actual"><strong>Cerrar sesión</strong></a>
{% endblock%}
{% block javascripts %}
    {{ parent() }}
{% endblock%}
