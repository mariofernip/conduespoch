{% extends '::frontend.html.twig' %}

{% block title %} INICIO {% endblock%}
{% block id 'portada' %}
{% block article%}
<section id="menu_admin">
    {% include 'administrativoBundle:Default:menu_admin.html.twig'%}
</section>
<h3><p align="center">Usuarios </p><h3>
{#LISTA DE DOCENTES#}
{% if sd== 1 %}
<div id="dt_example">
    <div id="demo">
        <table class="display" id="example">
            <thead>
                <tr >
                    <th>{{'Cedula' }}</th>
                    <th>{{'Nombres/Apellidos' }}</th>
                    <th>{{'e-mail'}}</th>                   
                    <th>{{'rol'}}</th>                                       
                    <th>{{'Estado'}}</th>
                    <th>Accion</th>
                </tr>
            </thead>
    
            <tbody>{% for usu in listausuarios %}
                <tr>
                        <td  ALIGN="CENTER" style="vertical-align:middle">{{usu.cedula}}</td> 
                        <td  ALIGN="CENTER" style="vertical-align:middle">{{usu.apellidos}}{{' '}}{{usu.nombre}}</td>   
                        <td  ALIGN="CENTER" style="vertical-align:middle">{{usu.email}}</td> 
                        <td  ALIGN="CENTER" style="vertical-align:middle">{{usu.rol}}</td>                                                
                        <td  ALIGN="CENTER" style="vertical-align:middle">{% if (usu.estado) ==1 %}
            <strong>Activo</strong>
        {% endif %}
        {% if (usu.estado) ==0 %}
            <strong>No activo</strong>
        {% endif %}</td> 
                        <td  ALIGN="CENTER" style="vertical-align:middle"><a  href="{{path('usuario_modificar_id',{'uid':usu.id})}}"><img title="Editar datos"   src="{{ asset('uploads/iconos/edit.gif') }}" ></a></td>
                <tr> 
                    {% endfor%}
            </tbody>

   
        </table>
            
    </div>
</div>
<br>
{% endif %}


