{% extends '::frontend.html.twig' %}


{% block id 'materia' %}

{% block title %}Registro de una nueva materia{% endblock%}

{% block article %}
<section id="menu_admin">
    {% include 'administrativoBundle:Default:menu_admin.html.twig'%}
</section>
<p style="text-align: center ; color: #0035C7 "><strong>REGISTRO DE UNA NUEVA MATERIA</strong></p>
<br>
<form action="{{ path('admin_materiaperiodo_registro') }}" method="post" {{
        form_enctype(formulario) }}>
        {{ form_errors(formulario) }}
          <fieldset>
                                  
                  {{form_label(formulario.subperiodo,'Subperido:')}}{{form_errors(formulario.subperiodo)}}{{form_widget(formulario.subperiodo) }}<br>                  
                  {{form_label(formulario.materia,'Materia:')}}{{form_errors(formulario.materia)}}{{form_widget(formulario.materia) }}<br>                  
           </fieldset>   
         {{form_rest(formulario)}}                   
          <input class="boton" type="submit" value="Guardar" />
</form>
<hr>
<p style="text-align: center ; color: #0035C7 "><strong>LISTA DE MATERIAS POR SUBPERIODOS</strong></p>
{% if sd== 1 %}
<div id="dt_example">
    <div id="demo">
        <table class="display" id="example">
            <thead>
                <tr >
                    <th>{{'Subperiodo' }}</th>
                    <th>{{'Materia'}}</th> 
                    <th>Accion</th>
                </tr>
            </thead>
            <tbody>{% for mp in lista %}
                <tr>
                        <td style="vertical-align:middle; text-align: center; width: 30px">{{mp.subperiodo}}</td>
                        <td style="vertical-align:middle; text-align: left">{{mp.materia}}</td>                        
                        <td style="vertical-align:middle; text-align: center"><a href="{{path('admin_materiaperiodo_modificar',{'mpid':mp.id})}}"><img title="Editar materia"   src="{{ asset('uploads/iconos/edit.gif') }}" ></a></td>
                <tr>{% endfor%}
            </tbody>
    
        </table>
            
    </div>
</div>
<br>
{% endif %}

{% endblock%}

{% block aside %}
    {{ parent()}}
    <a href="{{ path('usuario_logout') }}" title="Cerrar sesión actual"><strong>Cerrar sesión</strong></a>
{% endblock%}
{% block stylesheets %}
    {{ parent() }}

    {% include 'academicoBundle:Default:tablecss.html.twig'%}
{% endblock%}