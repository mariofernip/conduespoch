
{% extends '::frontend.html.twig' %}


{% block id 'portada' %}

{% block title %}Requisitos{% endblock%}

{% block article %}
<section id="menu_admin">
    {% include 'administrativoBundle:Default:menu_admin.html.twig'%}
    </section>
    <p style="text-align: center ; color: #0035C7 "><strong>MODIFICAR LISTA DE REQUISITOS</strong></p>
    <form action="{{ path('admin_requisito_modificar_estados') }}" method="post" {{
        form_enctype(form) }} >
    {{ form_start(form) }}
              <table style="width: 600px">
                  <thead>
                  <th>ESTADO</th>
                  <th>NOMBRE DEL REQUISITO</th>
                  </thead>
                  <tbody>
                    {% for req in form.estreq %}
                          <tr>
                              <td style="text-align: center; vertical-align: middle; width: 30px" > {{ form_widget(req.estado) }}</td><td style="text-align: left; vertical-align: middle; width: 500px">{{ form_widget(req.descripcion) }}</td>
                          </tr>
                    {% endfor %}
                      </tbody>
                  </table>

                  <input type="submit" value="guardar" class="boton" >
    {{ form_end(form) }}
              </form>



{% endblock%}

{% block aside %}
    {{ parent()}}
              <a href="{{ path('usuario_logout') }}" title="Cerrar sesión actual"><strong>Cerrar sesión</strong></a>
{% endblock%}
{% block stylesheets %}
    {{ parent() }}
    {% include 'academicoBundle:Default:tablecss.html.twig'%}
{% endblock%}    